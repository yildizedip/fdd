<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
   "-//Hibernate/Hibernate Mapping DTD//EN"
   "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd" >
<hibernate-mapping package="tr.com.fdd.dto">
	<class name="THastaDTO" table="t_hasta" >
		<id name="id" column="ID" type="int" unsaved-value="null">
			<generator class="increment" />
		</id>
		
		<property name="ad" column="AD" type="java.lang.String" />
	    <property name="soyad" column="SOYAD" type="java.lang.String" />
		<property name="protokolNo" column="PROTOKOL_NO" type="java.lang.String" />
		<property name="tckimlik" column="TCKIMLIK" type="java.lang.String" />
		<property name="tel" column="TEL" type="java.lang.String" />
		<property name="eklenmeTarihi" column="eklenmeTarihi" type="java.util.Date" />	
		<property name="guncellenmeTarihi" column="guncellenmeTarihi" type="java.util.Date" />				
		<property name="subeId" column="sube_id" type="int" />		
		<property name="guncelleyenKisi" column="guncelleyenKisi" type="int" />		
		<property name="durum" column="DURUM" type="java.lang.String" />
		<property name="adres" column="adres" type="java.lang.String" />
	
	
	</class>
</hibernate-mapping>